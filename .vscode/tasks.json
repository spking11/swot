{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile cpp file",
            "type": "cppbuild",
            "command": "clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "-Wall",
                "-fsanitize=undefined",
                "-fsanitize-trap=undefined"
            ],
            "problemMatcher": ["$gcc"]
        }
    ]
}